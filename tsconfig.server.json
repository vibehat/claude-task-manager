{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2017",
    "lib": ["es2017"],
    "isolatedModules": false,
    "noEmit": false
  },
  "include": ["server.ts", "server/**/*"],
  "exclude": ["node_modules", "src/**/*", ".next"]
}
